<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/startDateText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp" />

    <EditText
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/locationTitle"
        android:layout_alignStart="@+id/locationTitle"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/startDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date (YYY-MM-DD):"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/startDate" />

    <TextView
        android:id="@+id/endDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/startDate"
        android:layout_below="@+id/startDate"
        android:layout_marginTop="39dp"
        android:text="End Date (YYYY-MM-DD):" />

    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Type:"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/endDateText" />

    <Spinner
        android:id="@+id/locationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/boroughText"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <TextView
        android:id="@+id/boroughText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borough Type:"
        android:layout_above="@+id/boroughType"
        android:layout_alignStart="@+id/locationTitle"
        android:layout_marginBottom="21dp" />

    <Spinner
        android:id="@+id/boroughType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/searchButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Search"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/endDateText"
        android:layout_marginStart="39dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/searchButton"
        android:layout_alignStart="@+id/boroughText"
        android:layout_marginStart="27dp"
        android:text="Cancel" />

</RelativeLayout>